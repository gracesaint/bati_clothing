<p id="notice"><%= notice %></p>


<div class="jumbotron">
  <h1>Handcrafted Items from Around the Globe</h1>
  <h2>Discover one-of-a-kind clothes</h2>
</div>




<h1 style="text-align: center;">Women's Clothing</h1>


<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-6" style="text-align: center;">
    <div id="productName"><h1><%= link_to product.title, product %></h1></div>
    <%= link_to product_path(product) do %>
      <%= image_tag product.image_url %></br>
    <% end %>
    <%= print_price(product.price) %></br>
    <strong>Color: </strong><%= product.color %></br>
    <!--  button_to "Add to Cart", order_items_path(product_id: product.id), class: "btn btn-primary" %></br -->
    <%= button_to "Add to Cart", order_items_path(product_id: product.id), class: "btn btn-primary" %>
    <br>
    
    <% if current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(product) %></br>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></br>
    <% end %>
    
    </div>
  <% end %>
</div>


