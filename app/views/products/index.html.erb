<p id="notice"><%= notice %></p>


<div class="jumbotron">
  <h1>Handcrafted Items from Around the Globe</h1>
  <h2>Discover one-of-a-kind clothes</h2>
</div>


<h1>Women's Clothing</h1>


<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3">
    <h4><%= link_to product.title, product %></h4></br>
    <%= print_price(product.price) %></br>
    <%= product.color %></br>
    <%= image_tag "products/#{product.image_url}" %></br>
    <%= link_to 'Show', product_path(product) %></br>
    <%= button_to "Add to Cart", order_items_path(product_id: product.id) %>
    </div>
  <% end %>
</div>

<table id= "products" style="margin-left: 30px; border-collapse: collapse;" border="0"; cellspacing="0";>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Color</th>
      <th>Size</th>
      <th>Description</th>
      <th>Image</th>
      <th>Buy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="border-left: 0px none; border-right: 0px none;">
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td><%= print_price(product.price) %></td>
        <td><%= product.color %></td>
        <td><%= product.size %></td>
        <td><%= product.description %></td>
        <td><%= image_tag "products/#{product.image_url}" %></td>
        <td><%= link_to 'Show', product_path(product) %></td>
        <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %></td>
        
        <%  if current_user.admin? %>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <%  end   %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>



