<div class="row">
<div class="col-md-8">

<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @product.image_url %>
</p>

</div>

<div class="col-md-4">

<h2>
  <strong><%= @product.title %></strong>
</h2>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.color %>
</p>

<p>
  <strong>Size:</strong>
  <%= @product.size %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

</div>
</div>

<hr>


<h3 style="text-align: center;">COMPLETE YOUR LOOK</h3>
<div class="center">
<% @products.each do |p| %>
    <%= image_tag "products/#{@product.image_url}" %>
<% end %>
</div>

<hr>

<% if current_user.admin? %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>


<%= link_to 'Back', products_path %>
